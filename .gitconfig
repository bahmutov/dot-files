[user]
	email = gleb.bahmutov@gmail.com
	name = Gleb Bahmutov
[color]
  branch = auto
  diff = auto
  status = auto
	ui = true
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red
  new = cyan
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[alias]
  st = status -sb
  standup = log --pretty=format:'%Cred%h%Creset -%Creset %s %Cgreen(%cD) %C(bold blue)<%an>%Creset' --since='1 week ago' --author gleb
  lg = log --pretty=format:'%Cred%h%Creset -%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
  wdiff = diff --word-diff=plain
  ignored = ls-files --others -i --exclude-standard
  amend = !git log -n 1 --pretty=tformat:%s%n%n%b | git commit -F - --amend
  done = commit -am
  toorigin = push origin --all
  togithub = push github --all
  tobitbucket = push bitbucket --all
[core]
	editor = notepad2
